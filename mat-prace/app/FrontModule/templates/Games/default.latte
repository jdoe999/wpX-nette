{block content}
	<h1 n:block="title">Můj blog</h1>
	

	Žánry: {foreach $genres2 as $genre2}<a href="?genreId={$genre2->id}">{$genre2->desc}</a> {/foreach} 
	{foreach $games as $game}
	
	
	<div class="post">
		
		<h2><a href="{link games:show $game->id}">{$game->name}</a></h2>
		
		<b>Description</b>: {$game->description} <br><br>
		<b>Genre</b>: {$game->genre->desc} <br><br>
		<b>Release date</b>: {$game->release_date|date:'F j, Y'} <br>
		
		
		
		
	</div>
	{/foreach}
{/block}